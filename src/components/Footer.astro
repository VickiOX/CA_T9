    .container{
        padding-bottom: 10px;
        display: block;
    }
    .footer{
        display: inline-block;
        
    }
    img{
        width: 60px;
        padding: 8px 0;
    }
    .grid_1-1-1-1-1-1{
        display: grid;
        grid-template-rows: repeat(auto);
    }
    p{
        cursor:pointer;
        font-size: 22px;
        margin:5px 0;
    }
    .copyright{
        font-size: 14px;
    }
    img{
