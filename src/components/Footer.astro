---
import "../css/style.css";
---

<div class="wrapper"> 
<div class="footer">
    <div class="container "> 
        <p>Om CA</p>
        <p>Kontakt</p>
        <p>Nyhedsbrev</p>
    </div>

    <div class="container ">
        <p>Personsdatapolitik</p>
        <p>Cookiepolitik</p>
        <p>Tilgænghedserklæring</p>
    </div>

    <div class="container ">
        <p>Telefon hverdag 8:30-15:00</p>
        <p class="nummer">3314 9045</p>
        <p>Send en besked</p>
    </div>
</div>
    <div class="wrap"> 
        <div class="grid_1-1-1-1-1-1 row">
            <!--CA LOGO -->
            <div class="logo icons">
                <img src="/img/CA-LOGO.svg" alt="Logo">
                <span class=" hide_item">Your Career <br> Our Business</span>
            </div>
             <!--Trustpilot -->
            <img class="icons" id="trustpilot" src="/img/trustpilot_ca.svg" alt="Logo">
             <!--TikTok -->
            <img class="icons" src="/img/tiktok_ca.svg" alt="Logo">
             <!--Instagram -->
            <img class="icons" src="/img/instagram_ca.svg" alt="Logo">
             <!--Facebook -->
            <img class="icons" src="/img/Facebook_ca.svg" alt="Logo">
            <!--LinkedIn -->
            <img class="icons" src="/img/linedIn_ca.svg" alt="Logo">
        </div>
   
            <p class="copyright">@2023copyright</p>
     
    </div>
</div>


<style>
    .icons{
        justify-content: space-between;
        gap:10px;
    }
    .logo{
        display: flex;
        justify-content: inline-block;
    }
    .wrapper{
        background-color: var( --tertiary-color);
        margin:-10px;
        padding-left:20px;
        padding-top: 20px;
        color: var(--additional-color2);
        display: flex;
    }
    .nummer{
        font-size: 36px;
        margin:-10px 0;
    }
    .container{
        padding-bottom: 10px;
        display: block;
    }
    .footer{
        display: inline-block;
    
    }
    img{
        width: 50px;
        padding: 8px 0;
        cursor: pointer;
        
    }
    #trustpilot{
        width:230px;
    }
    .grid_1-1-1-1-1-1{
        display: grid;
        grid-template-rows: repeat(auto);
    }
    p{
        cursor:pointer;
        font-size: 22px;
        margin:5px 0;
    }
    .copyright{
        font-size: 14px;
    }
   

    @media screen and (min-width: 1000px){

    .footer{
        display:flex;
        gap:10%;
     
    }
    .container{
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        flex-flow: column wrap;
        justify-content: flex-start;
  
    }
       
    .grid_1-1-1-1-1-1{
        grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;
      
    }




}
</style>

