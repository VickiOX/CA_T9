    }

    @media screen and (min-width: 1000px){

    .footer{
        display:flex;
        gap:10%;
    }
    .container{
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        flex-flow: column wrap;
        justify-content: flex-start;
    }
       
    .grid_1-1-1-1-1-1{
        grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;
